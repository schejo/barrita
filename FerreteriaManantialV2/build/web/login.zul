<?page title="Inicio" contentType="text/html;charset=UTF-8"?>
<?meta name="viewport" content="width=device-width, initial-scale=1.0" ?>
<?link href="bootstrap/css/bootstrap.css" rel="stylesheet"?>
<?link href="css/principal.css" rel="stylesheet"?>

<zk xmlns:n="native">
    
    <window title="" border="none" style="background: transparent; "
            hflex="true" vflex="true" apply="environment.login" class="col-md-12">
        
        <div class="row text-center" height="100%" style=" border: none; margin: 0; padding:0;  background-image: -webkit-gradient(linear, left top, left bottom, from(rgba(175,216,230,0.2)), to(rgba(0,0,0,0.0)));">
            <n:div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center" style=" border: none; margin-top:5px; margin-bottom: 0; padding:0;">
            
                <div class="loginBox">
                    <image class="user" src="bootstrap/img/logo.png" width="200px" height="150px" style="margin-top: 0px; margin-bottom: 100px; margin-right: 100px; margin-left: 0px;" />
                    <n:h1 style="margin-top:40px; margin-bottom:20px; color: blue; font-family:Times;" >LOGIN</n:h1>
                    <div class="form-group" style="text-align: left; margin-top:5px; margin-left:10px;  padding-right: 0;">
                        <label value="Usuario " style="text-transform: uppercase; word-wrap: break-word; color: blue; font-family:Times; font-weight: bold; font-size: 18px;"/>
                        <textbox class="form-control textbox" id="txtUser" style="margin-top:5px;" maxlength="30" width="250px" constraint="no empty: Debe ingresar su usuario" focus="true" placeholder="INGRESAR USUARIO"/>
                    
                        <label value="Clave " style="text-transform: uppercase; word-wrap: break-word; color: blue; font-family:Times; font-weight: bold; font-size: 18px;"/>
                        <textbox class="form-control " id="txtPass" type="password" style="margin-top:10px;" maxlength="30" width="250px" constraint="no empty: Debe ingresar su clave" placeholder="INGRESAR CLAVE"/>
                        
                        <combobox id="cbxSucursal" readonly="true"  width="100%" style="font-size:16px; margin-top:5px;"  value="" >
                                <comboitem label = "SUCURSAL LA BARRITA" value = "1" />
                                <comboitem label = "SUCURSAL CARRIZAL" value = "2" />                    
                                <comboitem label = "SUCURSAL LOS ANGELES" value = "3" />                                
                            </combobox>
                        
                        <button  id="btnLogin" label="Inicio" type="button" class="btn btn-primary btn-lg" style="float: right" />
                    </div>
                </div> 
                
                
            </n:div>
        
        </div>
        
    </window>
</zk>

